<!DOCTYPE html>
<html>
  <head>
    <title>MyHVAC</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'pgGrid.bundle' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'raphael-2.1.4.min' %>
    <%= javascript_include_tag 'justgage' %>
    <%= javascript_include_tag 'pgGrid' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>&nbsp;&nbsp;My HVAC</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%=link_to 'Home', root_path %></li>
            <li><%=link_to 'Rooms', rooms_path %></li>
            <li><%=link_to 'Sensors', sensors_path %></li>
            <li><%=link_to 'Programs', programs_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
        <h1>&nbsp;</h1>
        <%= content_tag :div, :class => 'alert alert-dismissable alert-success' do %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p><%= notice %></p>
        <% end if notice.present? %>
        <%= content_tag :div, :class => 'alert alert-dismissable alert-danger' do %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <p><%= alert %></p>
        <% end if alert.present? %>
        <%= yield %>
    </div>

  </body>
</html>
