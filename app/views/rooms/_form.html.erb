<%= form_for @room do |f| %>
    <% if @room.errors.any? %>
      <div class="alert alert-dismissable alert-error">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h3><%=pluralize(@room.errors.count, 'error')%> were found trying to save the room data.</h3>
        <ul>
          <% @room.errors.full_messages.each do |error_mgs| %>
            <li><%=error_mgs %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :weight %>
      <%= f.text_field :weight, :class => 'form-control' %>
    </div>


    <div class="field checkbox-inline">
      <%= f.check_box :active, :class => 'form-control' %> <%= f.label :active %>
    </div>

    <div class="action form-group">
      <%= link_to 'Cancel', @room, :class => 'btn btn-default' %>
      <%= f.submit :class => 'btn btn-primary' %>
    </div>
<% end %>